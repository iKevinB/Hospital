@model IEnumerable<Hospital2.Models.Doctor>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Doctores</h2>

<p>
    @Html.ActionLink("Crear Nueva", "Create")
</p>
<table class="table">
    <tr>
        <th>
            <t>Nombre del Doctor</t>
        </th>
        <th>
            <t>Edad del Doctor</t>
        </th>
        <th>
            <t>Especialidad del Doctor</t>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombre_Doctor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.edad_Doctor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.especialidad_Doctor)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id_Doctor }) |
            @Html.ActionLink("Details", "Details", new { id=item.id_Doctor }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id_Doctor })
        </td>
    </tr>
}

</table>
